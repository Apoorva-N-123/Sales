@model Sales.Models.User

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Full-page background image */
        body {
            background-image: url('../../content/img12.jpg');
            background-blend-mode: darken;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background-color: rgba(255, 255, 253, 0.8); /* Black with transparency */
            padding: 20px;
            border-radius: 20px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            width: 300px; /* Reduced width */
            text-align: left;
        }

        .login-header {
            background-color: grey; /* Steel Blue */
            color: white;
            padding: 10px;
            text-align: center;
            border-radius: 8px 8px 8px 8px;
        }

        .form-label {
            font-weight: bold;
            text-align: left;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #4682B4;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .text-center p {
            color: black;
            text-decoration: none;
        }

        .text-center a {
            color: mediumseagreen;
            text-decoration: underline;
        }

            .text-center a:hover {
                text-decoration: underline;
            }

        .alert-custom {
            font-size: 16px;
        }
    </style>
</head>
<body>
    <center>
        <div class="login-container">

            <div class="login-header">
                <h4><b>INDUSTRY LOGIN</b></h4>
            </div>

            <!-- Display TempData Alert Messages -->
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info alert-custom mt-3" role="alert">
                    @TempData["Message"]
                </div>
            }

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter your username" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg mt-3">Login</button>
                </div>
            }

            <div class="form-group text-center mt-3">
                <p><b>Don't have an account ?</b></p>
                <a href="@Url.Action("Register", "Account")"><b>Register here</b></a>
            </div>
        </div>
    </center>
</body>
</html>
